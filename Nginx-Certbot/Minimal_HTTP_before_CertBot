# Handles HTTP requests and redirects them to HTTPS
server {
    listen 80;
    server_name www.ronaldlepape.fr;

    # Automatically redirect to HTTPS
    return 301 https://$host$request_uri;
}

# Handles actual HTTPS traffic (Certbot will update this)
server {
    listen 443 ssl;
    server_name www.ronaldlepape.fr;

    ssl_certificate /etc/letsencrypt/live/www.ronaldlepape.fr/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/www.ronaldlepape.fr/privkey.pem;

    location / {
        proxy_pass http://127.0.0.1:31152;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }
}